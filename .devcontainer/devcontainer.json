{
    "name": "Flask Blog DevContainer",
    "dockerComposeFile": [
        "../docker-compose.yml"
    ],
    "service": "flaskblog",
    "workspaceFolder": "/app",
    "remoteUser": "root",
    "customizations": {
        "vscode": {
            "extensions": [
                "ms-azuretools.vscode-docker",
                "eamodio.gitlens",
                "yzhang.markdown-all-in-one",
                "ms-python.vscode-pylance",
                "ms-python.python",
                "ms-python.debugpy",
                "mhutchie.git-graph"
            ]
        }
    },
    "mounts": [
        "source=${localWorkspaceFolder}/config/static,target=/app/static,type=bind"
    ]
}
